{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "dom"
    ],
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
